{
  "openapi": "3.0.0",
  "info": {
    "title": "API",
    "version": "2.0.0"
  },
  "paths": {
    "/api/people": {
      "get": {
        "summary": "getPerson",
        "operationId": "getPerson",
        "description": "Get data associated with person",
        "tags": [
          "persons"
        ],
        "parameters": [
          {
            "name": "personUuid",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            },
            "description": "The person's UUID"
          }
        ],
        "responses": {
          "200": {
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string",
                      "example": "success"
                    },
                    "message": {
                      "type": "string",
                      "example": "Data associated with person."
                    },
                    "data": {
                      "person": {
                        "first_name": {
                          "type": "string",
                          "example": "Pam"
                        },
                        "last_name": {
                          "type": "string",
                          "example": "Halpert"
                        },
                        "ssn": {
                          "type": "string",
                          "pattern": "^\\d{9}$"
                        }
                      },
                      "limitedPerson": {
                        "first_name": {
                          "type": "string",
                          "example": "Pam"
                        },
                        "last_name": {
                          "type": "string",
                          "example": "Halpert"
                        }
                      },
                      "expandedPerson": {
                        "first_name": {
                          "type": "string",
                          "example": "Pam"
                        },
                        "last_name": {
                          "type": "string",
                          "example": "Halpert"
                        },
                        "age": {
                          "type": "integer",
                          "example": 25
                        }
                      },
                      "personWithRequiredSsn": {
                        "first_name": {
                          "type": "string",
                          "example": "Pam"
                        },
                        "last_name": {
                          "type": "string",
                          "example": "Halpert"
                        },
                        "ssn": {
                          "type": "string",
                          "pattern": "^\\d{9}$",
                          "required": true
                        }
                      },
                      "personWithEasyRequires": {
                        "first_name": {
                          "type": "string",
                          "example": "Pam",
                          "required": true
                        },
                        "last_name": {
                          "type": "string",
                          "example": "Halpert",
                          "required": true
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": "string",
                    "example": "Unauthorized"
                  },
                  "required": [
                    "code"
                  ]
                }
              }
            }
          },
          "404": {
            "description": "Not found",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": "string",
                    "example": "Not found"
                  },
                  "required": [
                    "code"
                  ]
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Person": {
        "first_name": {
          "type": "string",
          "example": "Pam"
        },
        "last_name": {
          "type": "string",
          "example": "Halpert"
        },
        "ssn": {
          "type": "string",
          "pattern": "^\\d{9}$"
        }
      }
    },
    "responses": {
      "$ref": "components/responses/index.js"
    },
    "parameters": {
      "$ref": "components/parameters/index.js"
    }
  },
  "servers": [
    {
      "url": "{protocol}://localhost:{port}",
      "description": "Local development server",
      "variables": {
        "port": {
          "enum": [
            "3030",
            "4010"
          ],
          "default": "3030"
        },
        "protocol": {
          "enum": [
            "https",
            "http"
          ],
          "default": "https"
        }
      }
    }
  ]
}