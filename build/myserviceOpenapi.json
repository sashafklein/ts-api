{
  "openapi": "3.0.0",
  "info": {
    "title": "API",
    "version": "2.0.0"
  },
  "paths": {
    "/api/people": {
      "get": {
        "summary": "getPerson",
        "operationId": "getPerson",
        "description": "Get data associated with person",
        "tags": [
          "persons"
        ],
        "parameters": [
          {
            "name": "personUuid",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            },
            "description": "The person's UUID"
          }
        ],
        "responses": {
          "200": {
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string",
                      "example": "success"
                    },
                    "message": {
                      "type": "string",
                      "example": "Data associated with person."
                    },
                    "data": {
                      "type": "object",
                      "properties": {
                        "person": {
                          "type": "object",
                          "properties": {
                            "first_name": {
                              "type": "string",
                              "example": "Pam"
                            },
                            "last_name": {
                              "type": "string",
                              "example": "Halpert"
                            },
                            "ssn": {
                              "type": "string",
                              "pattern": "^\\d{9}$"
                            }
                          },
                          "required": []
                        },
                        "limitedPerson": {
                          "type": "object",
                          "properties": {
                            "first_name": {
                              "type": "string",
                              "example": "Pam"
                            }
                          },
                          "required": []
                        },
                        "expandedPerson": {
                          "type": "object",
                          "properties": {
                            "first_name": {
                              "type": "string",
                              "example": "Pam"
                            },
                            "last_name": {
                              "type": "string",
                              "example": "Halpert"
                            },
                            "ssn": {
                              "type": "string",
                              "pattern": "^\\d{9}$"
                            },
                            "age": {
                              "type": "integer",
                              "example": 25
                            }
                          },
                          "required": [
                            "age"
                          ]
                        },
                        "personWithRequiredSsn": {
                          "type": "object",
                          "properties": {
                            "first_name": {
                              "type": "string",
                              "example": "Pam"
                            },
                            "last_name": {
                              "type": "string",
                              "example": "Halpert"
                            },
                            "ssn": {
                              "type": "string",
                              "pattern": "^\\d{9}$"
                            }
                          },
                          "required": [
                            "ssn"
                          ]
                        },
                        "personWithEasyRequires": {
                          "type": "object",
                          "properties": {
                            "first_name": {
                              "type": "string",
                              "example": "Pam"
                            },
                            "last_name": {
                              "type": "string",
                              "example": "Halpert"
                            },
                            "ssn": {
                              "type": "string",
                              "pattern": "^\\d{9}$"
                            }
                          },
                          "required": [
                            "first_name",
                            "last_name"
                          ]
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "Unauthorized"
                    }
                  },
                  "required": [
                    "message"
                  ]
                }
              }
            }
          },
          "404": {
            "description": "Not found",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "Not found"
                    }
                  },
                  "required": [
                    "message"
                  ]
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Person": {
        "type": "object",
        "properties": {
          "first_name": {
            "type": "string",
            "example": "Pam"
          },
          "last_name": {
            "type": "string",
            "example": "Halpert"
          },
          "ssn": {
            "type": "string",
            "pattern": "^\\d{9}$"
          }
        },
        "required": []
      }
    },
    "responses": {
      "$ref": "components/responses/index.js"
    },
    "parameters": {
      "$ref": "components/parameters/index.js"
    }
  },
  "servers": [
    {
      "url": "{protocol}://localhost:{port}",
      "description": "Local development server",
      "variables": {
        "port": {
          "enum": [
            "3030",
            "4010"
          ],
          "default": "3030"
        },
        "protocol": {
          "enum": [
            "https",
            "http"
          ],
          "default": "https"
        }
      }
    }
  ]
}